package xim;

import java.net.*;
import java.io.*;


public class NewReceiver extends Thread {
  private MsgWindow w;
  private DatagramSocket ds;
  private byte[] buff = new byte[1024];
  private int port;

  public NewReceiver(MsgWindow w,int receivePort){
    this.w = w;
    this.port = receivePort;
  }
  public void sendUpdate(String s){
    w.Update(s);
  }
  public void run(){
    try{
        ds = new DatagramSocket(port);
      while(true){
        String s = "";
        DatagramPacket p = new DatagramPacket(buff, buff.length);
        ds.receive(p);
        for(int j=0;j < p.getLength(); j++){
          s += (char)buff[j];
        }
        sendUpdate(s);
        JavaZoom zoom = new JavaZoom();
        zoom.play("C:\\Documents and Settings\\Chris Holcombe\\My Documents\\imrcv.mp3");
        zoom.start();
        w.jScrollPane1.getVerticalScrollBar().setValue(w.jScrollPane1.getVerticalScrollBar().getMaximum());
      }
      }catch(IOException e){System.out.println("IOException: " + e);}
  }


}