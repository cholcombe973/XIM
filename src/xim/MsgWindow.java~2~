public class MsgWindow extends JFrame {
  private JPanel contentPane;
  private JButton jButtonSend = new JButton();
  private JTextArea jTextPane1 = new JTextArea(5,30);
  private JTextArea jTextPane2 = new JTextArea(5,30);
